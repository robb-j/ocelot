
.args-table
  margin-bottom 2em
  
  h4
    margin-top 1em
    margin-bottom 0
  
  table
    width 100%
    margin-left 1em
    
    th,td
      padding 0.3em
      border 1px solid #ddd
      font-family lora
      
      &.name
        text-align right
      &.type
        text-align center
      &.info
        text-align left
    
    thead tr th
      border-top none
      font-family lora
      font-weight 700
      color #334
      font-style italic
      text-transform lowercase
    
    tbody tr:last-child td
      border-bottom none
    
    thead tr th, tbody tr td
      &:first-child
        border-left none
      &:last-child
        border-right none
    
    tbody
      td.info .optional
        font-size 0.9em
        padding 0.1em 0.3em
        margin -0.1em 0.4em -0.1em 0
        background #bbb
        border-radius: 0.3em
        font-family notoSans
        color white
